{
  "name": "static-generator",
  "version": "0.2.4",
  "license": "MIT",
  "devDependencies": {
    "cpy-cli": "latest",
    "jade": "latest",
    "jshint": "^2.8.0",
    "jshint-stylish": "^0.4.0",
    "live-server": "^0.8.2",
    "nib": "latest",
    "npm-run-all": "^1.2.13",
    "onchange": "^3.0.0",
    "renamer": "^0.5.7",
    "rollup": "^0.34.11",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^4.1.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-string": "^2.0.2",
    "rollup-plugin-uglify": "^1.0.1",
    "stylus": "latest",
    "uglify-js": "^2.5.0"
  },
  "scripts": {
    "create:json": "node project-json.js jade",
    "start": "NODE_ENV=development npm-run-all --parallel server:localhost listen:* copy:*",
    "build": "NODE_ENV=production npm-run-all create:* build:*",
    "server:localhost": "live-server ./public --port=3000",
    "copy:css": "cpy 'css/**/*.*' '../public' --cwd='./statics' --parents",
    "copy:scripts": "cpy 'js/**/*.*' '../public' --cwd='./statics' --parents",
    "copy:js": "cpy 'views/*.js' '../public/js' --cwd='./js' --parents",
    "copy:img": "cpy 'images/**/*.*' '../public' --cwd='./statics' --parents",
    "listen:js": "onchange 'js/**/*.js' -- npm run compile:bundle",
    "listen:views": "onchange 'jade/views/**/*.jade' -- npm run compile:pages",
    "listen:templates": "onchange jade/components/**/*.jade -- npm run compile:templates",
    "listen:stylus": "onchange 'stylus/**/*.styl' -- npm run compile:css",
    "precompile:js": "jshint --reporter=node_modules/jshint-stylish/stylish js/.; exit 0",
    "compile:bundle": "rollup -c",
    "compile:css": "stylus -u nib stylus/style.styl -o public/css/style.css",
    "compile:templates": "jade jade/components -o js/templates/",
    "compile:pages": "jade -O jade/config.json jade/views -H -o public/",
    "build:copy--css": "cpy 'css/**/*.*' '../dist' --cwd='./statics' --parents",
    "build:copy--scripts": "cpy 'js/**/*.*' '../dist' --cwd='./statics' --parents",
    "build:copy--js": "cpy 'views/*.js' '../dist/js' --cwd='./js' --parents",
    "build:copy--img": "cpy 'images/**/*.*' '../dist' --cwd='./statics' --parents",
    "build:css": "stylus -u nib stylus/style.styl -o dist/css/style.css",
    "build:html": "jade -O jade/config.json jade/views -H -o dist/",
    "build:projects": "jade jade/config.json jade/views/static-projects -o dist/projects",
    "build:bundle": "rollup -c -o dist/js/bundle.js",
    "build:trim-html": "renamer --find '.html' --replace '' dist/*.html",
    "build:trim-work-html": "renamer --find '.html' --replace '' dist/work/*.html"
    "build:trim-services-html": "renamer --find '.html' --replace '' dist/services/*.html"
  }
}
